# GLIN Explorer Environment Configuration

# Blockchain RPC Endpoint (WebSocket)
NEXT_PUBLIC_RPC_ENDPOINT=wss://testnet.glin.ai
# Or local node:
# NEXT_PUBLIC_RPC_ENDPOINT=ws://localhost:9944

# Backend API (glin-backend) - Faucet, Points, Tasks, Providers
NEXT_PUBLIC_BACKEND_API=http://localhost:8080
# Production:
# NEXT_PUBLIC_BACKEND_API=https://glin-backend-production.up.railway.app

# Explorer API (glinscan-api) - Indexed blockchain data
NEXT_PUBLIC_API_URL=http://localhost:3001
# Production:
# NEXT_PUBLIC_API_URL=https://api.explorer.glin.ai

# Explorer Configuration
NEXT_PUBLIC_CHAIN_NAME=GLIN Testnet
NEXT_PUBLIC_TOKEN_SYMBOL=tGLIN
NEXT_PUBLIC_TOKEN_DECIMALS=18

# Optional: Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false